{
    "name": "nexus/audit",
    "description": "Cryptographically-verified, immutable audit engine with hash chains and digital signatures for Nexus ERP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/crypto": "*@dev",
        "symfony/uid": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Audit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Audit\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
