    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@example.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
