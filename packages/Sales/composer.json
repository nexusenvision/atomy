{
    "name": "nexus/sales",
    "description": "Framework-agnostic sales management package for quotation-to-order lifecycle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/party": "*@dev",
        "nexus/product": "*@dev",
        "nexus/uom": "*@dev",
        "nexus/currency": "*@dev",
        "nexus/finance": "*@dev",
        "nexus/sequencing": "*@dev",
        "nexus/period": "*@dev",
        "nexus/audit-logger": "*@dev",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Sales\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Sales\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
