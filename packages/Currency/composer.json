{
    "name": "nexus/currency",
    "description": "Framework-agnostic ISO 4217-compliant currency management and exchange rate engine for the Nexus ERP system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "nexus/finance": "*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Currency\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Currency\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
