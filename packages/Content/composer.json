{
    "name": "nexus/content",
    "description": "Framework-agnostic knowledge base and content management package with versioning, workflow, and multi-language support",
    "type": "library",
    "license": "MIT",
    "keywords": ["content", "cms", "knowledge-base", "versioning", "articles", "documentation"],
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Content\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Content\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
