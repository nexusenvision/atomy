{
    "name": "nexus/compliance",
    "description": "Operational compliance engine for enforcing business rules, SOD (Segregation of Duties), and compliance scheme requirements",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Compliance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Compliance\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
