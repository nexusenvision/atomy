{
    "name": "nexus/field-service",
    "description": "Framework-agnostic field service management engine for work orders, technician dispatch, mobile job execution, service contracts, and SLA tracking",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "field-service",
        "work-order",
        "technician",
        "dispatch",
        "service-contract",
        "sla",
        "mobile",
        "gps",
        "maintenance"
    ],
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "nexus/party": "*@dev",
        "nexus/backoffice": "*@dev",
        "nexus/inventory": "*@dev",
        "nexus/warehouse": "*@dev",
        "nexus/scheduler": "*@dev",
        "nexus/routing": "*@dev",
        "nexus/geo": "*@dev",
        "nexus/workflow": "*@dev",
        "nexus/sequencing": "*@dev",
        "nexus/document": "*@dev",
        "nexus/storage": "*@dev",
        "nexus/notifier": "*@dev",
        "nexus/audit-logger": "*@dev",
        "nexus/tenant": "*@dev",
        "nexus/product": "*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "nexus/assets": "Enable preventive maintenance scheduling and asset tracking",
        "nexus/machine-learning": "AI-powered technician assignment and demand forecasting",
        "nexus/crypto": "Cryptographic timestamp signing for customer signatures (Tier 3 compliance)",
        "nexus/event-stream": "Work order state replay for compliance auditing"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\FieldService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\FieldService\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
