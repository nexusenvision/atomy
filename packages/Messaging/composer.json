{
    "name": "nexus/messaging",
    "description": "Channel-agnostic, immutable communication record management for Email, SMS, Chat, Webhooks with protocol abstraction",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "messaging",
        "communication",
        "email",
        "sms",
        "chat",
        "whatsapp",
        "conversation",
        "timeline",
        "audit-trail"
    ],
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Messaging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Messaging\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
