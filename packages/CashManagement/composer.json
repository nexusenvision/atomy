{
    "name": "nexus/cash-management",
    "description": "Atomic package for managing bank accounts, bank statement imports, cash reconciliation, and liquidity forecasting",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/finance": "*@dev",
        "nexus/receivable": "*@dev",
        "nexus/payable": "*@dev",
        "nexus/period": "*@dev",
        "nexus/currency": "*@dev",
        "nexus/sequencing": "*@dev",
        "nexus/import": "*@dev",
        "nexus/setting": "*@dev",
        "nexus/workflow": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "nexus/intelligence": "*@dev",
        "nexus/analytics": "*@dev"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\CashManagement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\CashManagement\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
