{
    "name": "nexus/manufacturing",
    "description": "Framework-agnostic manufacturing and production management for Nexus ERP - BOM, Work Orders, Routings, MRP, CRP with ML-powered demand forecasting",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Architecture Team",
            "email": "architecture@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/inventory": "*@dev",
        "nexus/product": "*@dev",
        "nexus/uom": "*@dev",
        "nexus/warehouse": "*@dev",
        "nexus/machine-learning": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "nexus/event-stream": "Event sourcing for production state replay and audit trail",
        "nexus/workflow": "Advanced work order approval workflows and state machine extensions"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Manufacturing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Manufacturing\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
