{
    "name": "nexus/receivable",
    "description": "Accounts Receivable (A/R) package for Nexus ERP - manages customer invoicing, payment receipts, credit control, and collections",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nexus\\Receivable\\": "src/"
        }
    },
    "require": {
        "php": "^8.3",
        "nexus/finance": "*@dev",
        "nexus/party": "*@dev",
        "nexus/sales": "*@dev",
        "nexus/currency": "*@dev",
        "nexus/period": "*@dev",
        "nexus/sequencing": "*@dev",
        "nexus/audit-logger": "*@dev",
        "psr/log": "^3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Receivable\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
