{
    "name": "nexus/geo",
    "description": "Framework-agnostic geographic and location services for the Nexus ERP system with cost-optimized geocoding and geospatial calculations",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "geocoder-php/google-maps-provider": "^4.7",
        "geocoder-php/nominatim-provider": "^5.7",
        "nexus/party": "*@dev",
        "nexus/connector": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Geo\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
