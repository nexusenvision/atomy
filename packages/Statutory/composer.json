{
    "name": "nexus/statutory",
    "description": "Statutory reporting engine for generating tax and regulatory reports in country-specific formats",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexus Development Team",
            "email": "dev@nexus.local"
        }
    ],
    "require": {
        "php": "^8.3",
        "nexus/finance": "*@dev",
        "nexus/period": "*@dev",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Statutory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Statutory\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
